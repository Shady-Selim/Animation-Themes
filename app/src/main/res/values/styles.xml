<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="imageViewStyle">
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="button">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/teal_700</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">OK</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="button.ok2">
        <item name="android:text">OK2</item>
    </style>
    <style name="button.ok3">
        <item name="android:text">OK3</item>
    </style>
</resources>